<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Win10Styles.Themes">

    <SolidColorBrush
        x:Key="ControlBorderColor"
        Color="#DCDCDC" />

    <SolidColorBrush
        x:Key="TabAccentColor"
        Color="#00B4CC" />

    <SolidColorBrush
        x:Key="TabForegroundColor"
        Color="#444444" />

    <SolidColorBrush
        x:Key="TabHoverColor"
        Color="#DDDDDD" />

    <SolidColorBrush
        x:Key="TabPressedColor"
        Color="#BBBBBB" />

</ResourceDictionary>